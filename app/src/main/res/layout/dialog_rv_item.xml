<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="124dp"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:textColor="#99000000"
                android:textSize="17sp"
                android:text="13888888888"
                android:id="@+id/dialog_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="广东-深圳 移动"
                android:id="@+id/dialog_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:background="@drawable/dialog_send_msg_bg"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:id="@+id/dialog_send_msg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/calllog_detail_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/dialog_send_msg_bg"
            android:id="@+id/dialog_call"
            android:clickable="true"
            android:layout_toLeftOf="@+id/dialog_send_msg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/calllog_detail_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <View
            android:layout_below="@+id/dialog_call"
            android:id="@+id/line"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>