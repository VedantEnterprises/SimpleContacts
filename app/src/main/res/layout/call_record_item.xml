<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@drawable/bg_ll"
    android:layout_width="match_parent"
    android:paddingTop="9dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/call_log_iv"
        android:src="@drawable/ic_call_log_list_default_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="2dp"
                android:paddingRight="13dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/call_name"
                        android:textSize="18sp"
                        android:text="京东快递"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/call_date"
                        android:textSize="14sp"
                        android:text="12:33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/call_number"
                        android:textSize="16sp"
                        android:text="13524326109"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/call_sim"
                        android:textSize="12sp"
                        android:text="卡1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/call_log_arrow"
                android:src="@drawable/calllog_list_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:button="@drawable/call_log_check_box_bg"
                android:visibility="gone"
                android:id="@+id/call_log_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="9dp"
            android:background="#10000000"
            android:layout_below="@id/ll"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>
</LinearLayout>