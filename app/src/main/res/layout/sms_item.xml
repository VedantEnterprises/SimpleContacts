<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@drawable/bg_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:id="@+id/sms_iv"
        android:src="@drawable/default_contact_head_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="2dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#cc000000"
                        android:id="@+id/sms_address"
                        android:textSize="16sp"
                        android:text="10086100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/sms_date"
                        android:textSize="10sp"
                        android:text="12:33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="1dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/sms_body"
                        android:textSize="13sp"
                        android:text="13524326109"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:button="@drawable/call_log_check_box_bg"
                android:visibility="gone"
                android:id="@+id/sms_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="9dp"
            android:background="#10000000"
            android:layout_below="@id/ll"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>
</LinearLayout>